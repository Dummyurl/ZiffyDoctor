<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DrawerMenu.activities.AccountsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabTextColor="@color/dark_grey"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="@dimen/dimen_5"
            android:layout_margin="@dimen/dimen_5"
            style="@style/custom_tabLayout" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            app:srcCompat="@drawable/ic_graph_accounts"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/text_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="15/04/2019"
                        android:textColor="@color/grey_light"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_30"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="end"
                    android:padding="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_15">
                    <ImageView
                        android:id="@+id/img_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_calender"
                        android:layout_gravity="center"
                        android:padding="@dimen/dimen_5"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TO"
            android:layout_marginTop="@dimen/dimen_5"
            android:textAlignment="center"
            android:paddingTop="@dimen/dimen_10"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/text_size_20"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_3"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/text_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="19/04/2019"
                        android:textColor="@color/grey_light"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_30"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="end"
                    android:padding="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_15">
                    <ImageView
                        android:id="@+id/img_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_calender"
                        android:layout_gravity="center"
                        android:padding="@dimen/dimen_5"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>





    </LinearLayout>







</LinearLayout>