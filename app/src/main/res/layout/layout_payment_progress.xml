<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen_5"
    tools:context=".activities.OPD.activities.Activities.PaymentActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginTop="@dimen/dimen_15"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_5"
        app:cardMaxElevation="@dimen/dimen_5">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:padding="@dimen/dimen_5"
            android:text="Wait â€¦ user is paying..."
            android:textAlignment="center"
            android:textSize="@dimen/text_size_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_120"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/hint_text"
                app:cpb_background_progressbar_width="@dimen/dimen_15"
                app:cpb_progressbar_color="@color/colorPrimary"
                app:cpb_progressbar_width="@dimen/dimen_15" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                app:srcCompat="@drawable/ic_payment_wait_icon" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10"
            android:padding="@dimen/dimen_3"
            android:text="Next"
            android:textSize="@dimen/text_size_15"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorAccent_faint_30"
            />
    </LinearLayout>

</LinearLayout>