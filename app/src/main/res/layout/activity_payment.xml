<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_5"
    android:orientation="vertical"
    tools:context=".activities.OPD.activities.Activities.PaymentActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/dimen_15"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_5"
        app:cardMaxElevation="@dimen/dimen_5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40"
            android:padding="@dimen/dimen_10"
            android:text="Cash collected by..."
            android:textAlignment="center"
            android:textSize="@dimen/text_size_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_pos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_payment_type_unselected"
                    android:padding="@dimen/dimen_20"
                    android:text="POS"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/payment_text_color"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_cheque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:background="@drawable/bg_payment_type_unselected"
                    android:padding="@dimen/dimen_20"
                    android:text="Cheque"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/payment_text_color"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:background="@drawable/bg_payment_type_unselected"
                    android:padding="@dimen/dimen_20"
                    android:text="CASH"

                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/payment_text_color"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="@dimen/dimen_10"
            android:background="@color/colorPrimary"
            android:padding="@dimen/dimen_3"
            android:text="Next"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>