<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MyPatients.activities.PatientListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_3"
                app:cardElevation="@dimen/dimen_3"
                app:cardMaxElevation="@dimen/dimen_3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/bg_rect_border"
                android:drawableRight="@drawable/ic_search"
                android:drawablePadding="@dimen/dimen_5"
                android:hint="Search Medicine"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text"
                android:textSize="@dimen/text_size_15" />

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>