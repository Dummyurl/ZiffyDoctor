<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.OPD.OPD.Activities.MedicinePrescribeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_3"
            app:cardElevation="@dimen/dimen_3"
            app:cardMaxElevation="@dimen/dimen_3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:padding="@dimen/dimen_5"
                        android:src="@drawable/user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_weight="0.2"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingTop="@dimen/dimen_3"
                        android:paddingRight="@dimen/dimen_3"
                        android:text="Bhushan Sanap"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingRight="@dimen/dimen_3"
                        android:text="Male"
                        android:textColor="@color/card_cancel_reschedule"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_3"
                        android:paddingRight="@dimen/dimen_3"
                        android:text="9028000726"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_test_cart" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_top"
        android:id="@+id/layout_vitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_40"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_3"
                    app:cardElevation="@dimen/dimen_3"
                    app:cardMaxElevation="@dimen/dimen_3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/text_med_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.8"
                                android:background="@drawable/bg_rect_border"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:drawablePadding="@dimen/dimen_3"
                                android:padding="@dimen/dimen_10"
                                android:text="Tab"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_15"></TextView>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_10"
                                android:layout_weight="0.2"
                                android:background="@drawable/bg_rect_border"
                                android:drawableRight="@drawable/ic_search"
                                android:drawablePadding="@dimen/dimen_5"
                                android:hint="Search Medicine"
                                android:padding="@dimen/dimen_10"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/hint_text"
                                android:textSize="@dimen/text_size_15" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:layout_weight="0.75"
                                android:padding="@dimen/dimen_3"
                                android:text="Drug Name :"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_13" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:layout_weight="0.25"
                                android:padding="@dimen/dimen_3"
                                android:textSize="@dimen/text_size_13" />
                            <!--   <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/dimen_40"
                                   android:layout_weight="0.4"
                                   android:textColor="@color/colorPrimary"
                                   android:text="Remove"
                                   android:textSize="@dimen/text_size_12"
                                   android:background="@drawable/bg_button_blue_border"/>-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_layout_meal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_before_meal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="@dimen/dimen_3"
                                        android:padding="@dimen/dimen_5"
                                        android:text="Before Meal"
                                        android:textAlignment="center"
                                        android:textColor="@color/grey_light"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/view_before_meal"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_2"
                                        android:background="@color/card_cancel_reschedule"
                                        android:visibility="gone"></View>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/text_after_meal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="@dimen/dimen_3"
                                        android:padding="@dimen/dimen_5"
                                        android:text="After Meal"
                                        android:textAlignment="center"
                                        android:textColor="@color/dark_grey"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/view_after_meal"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_2"
                                        android:background="@color/card_cancel_reschedule"></View>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_5"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:padding="@dimen/dimen_2"
                                android:text="Days :"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_15" />

                            <com.warkiz.widget.IndicatorSeekBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                app:isb_indicator_color="@color/white"
                                app:isb_indicator_text_color="@color/colorAccent"
                                app:isb_indicator_text_size="@dimen/text_size_15"
                                app:isb_max="10"
                                app:isb_min="1"
                                app:isb_only_thumb_draggable="false"
                                app:isb_show_indicator="rounded_rectangle"
                                app:isb_show_tick_marks_type="oval"
                                app:isb_show_tick_texts="true"
                                app:isb_thumb_color="@color/colorPrimary"
                                app:isb_thumb_size="20dp"
                                app:isb_tick_marks_size="13dp"
                                app:isb_tick_texts_color="@color/colorPrimary"
                                app:isb_tick_texts_size="@dimen/dimen_10"
                                app:isb_track_background_size="2dp"
                                app:isb_track_progress_color="@color/colorPrimary"
                                app:isb_track_progress_size="@dimen/dimen_5" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_morn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_unselected_rb" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:text="Morning"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_15" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_aft"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_unselected_rb" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:text="Afternoon"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_15" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_eve"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_unselected_rb" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:text="Evening"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_15" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_night"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_unselected_rb" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:text="Night"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_15" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15"
                            android:layout_marginTop="@dimen/dimen_20"
                            android:layout_marginRight="@dimen/dimen_15"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_3"
                                android:padding="@dimen/dimen_5"
                                android:text="Comment"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_15" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_80"
                                android:layout_marginRight="@dimen/dimen_15"
                                android:background="@drawable/bg_rect_border"
                                android:textColor="@color/grey_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:layout_marginRight="@dimen/dimen_15"
                            android:layout_marginBottom="@dimen/dimen_30"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="@dimen/dimen_80"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimen_5"
                                    android:background="@drawable/bg_cancel_button"
                                    android:padding="@dimen/dimen_10"
                                    android:text="Cancel"
                                    android:textAlignment="center"
                                    android:textColor="@color/color_green"
                                    android:textSize="@dimen/text_size_12" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="@dimen/dimen_75"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimen_5"
                                    android:background="@drawable/bg_add_button"
                                    android:padding="@dimen/dimen_10"
                                    android:text="Add"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_12" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_alignParentRight="true">


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="@dimen/dimen_10"
                app:cardElevation="@dimen/dimen_3"
                app:cardMaxElevation="@dimen/dimen_3">


                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:text="next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>